generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String
  password_hash String
  role          Role
  created_at    DateTime @default(now())

  Org Org[]

  @@map("user")
}

model Org {
  id         String   @id @default(uuid())
  user_id    String
  name       String
  city       String
  address    String
  wpp_number String
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id])

  @@map("org")
}

enum Role {
  ORG_ADMIN
  MEMBER
}
