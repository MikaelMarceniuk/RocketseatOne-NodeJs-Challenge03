// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  name          String
  email         String
  password_hash String
  role          Role
  created_at    DateTime @default(now())

  @@map("user")
}

enum Role {
  ORG_ADMIN
  MEMBER
}
